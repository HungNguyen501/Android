<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <view android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/text_calcu"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:gravity="center|right"
        android:textSize="80sp"
        android:padding="20sp"
        android:textColor="#000000"
        android:background="#CCD1D1"
        android:text="0"/>

    <RelativeLayout
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/view1"
        android:layout_below="@+id/text_calcu"
        android:layout_alignParentBottom="true"
        android:layout_margin="2.5sp"
        android:layout_alignParentStart="true">

        <view
            android:id="@+id/view1_child1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/btn_ce"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignEnd="@id/view1_child1"
            android:layout_alignParentStart="true"
            android:background="#CCD1D1"
            android:layout_margin="2.5sp"
            android:textSize="30sp"
            android:text="ce"/>
        <Button
            android:id="@+id/btn_c"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignStart="@id/view1_child1"
            android:background="#CCD1D1"
            android:layout_alignParentEnd="true"
            android:layout_margin="2.5sp"
            android:textSize="30sp"
            android:text="c"/>
        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignEnd="@id/view1_child1"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_ce"
            android:background="#EBEDEF"
            android:textSize="30sp"
            android:layout_margin="2.5sp"
            android:text="7"/>
        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignStart="@id/view1_child1"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btn_c"
            android:background="#EBEDEF"
            android:textSize="30sp"
            android:layout_margin="2.5sp"
            android:text="8"/>
        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignEnd="@id/view1_child1"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_7"
            android:background="#EBEDEF"
            android:layout_margin="2.5sp"
            android:textSize="30sp"
            android:text="4"/>
        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignStart="@id/view1_child1"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btn_8"
            android:background="#EBEDEF"
            android:textSize="30sp"
            android:layout_margin="2.5sp"
            android:text="5"/>
        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignEnd="@id/view1_child1"
            android:layout_alignParentStart="true"
            android:background="#EBEDEF"
            android:layout_below="@+id/btn_4"
            android:textSize="30sp"
            android:layout_margin="2.5sp"
            android:text="1"/>
        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignStart="@id/view1_child1"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btn_5"
            android:background="#EBEDEF"
            android:textSize="30sp"
            android:layout_margin="2.5sp"
            android:text="2"/>
        <Button
            android:id="@+id/btn_double"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignEnd="@id/view1_child1"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_1"
            android:background="#CCD1D1"
            android:textSize="30sp"
            android:layout_margin="2.5sp"
            android:text="+/-"/>
        <Button
            android:id="@+id/btn_0"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignStart="@id/view1_child1"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btn_2"
            android:background="#EBEDEF"
            android:textSize="30sp"
            android:layout_margin="2.5sp"
            android:text="0"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0sp"
        android:layout_alignStart="@id/view1"
        android:layout_below="@+id/text_calcu"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2.5sp"
        android:layout_marginTop="2.5sp"
        android:layout_marginBottom="2.5sp"
        android:layout_alignParentEnd="true">

        <view
            android:id="@+id/view1_child2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/btn_bs"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignEnd="@id/view1_child2"
            android:layout_alignParentStart="true"
            android:layout_margin="2.5sp"
            android:background="#CCD1D1"
            android:textSize="30sp"
            android:text="bs"/>
        <Button
            android:id="@+id/btn_dive"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignStart="@id/view1_child2"
            android:layout_alignParentEnd="true"
            android:background="#CCD1D1"
            android:layout_margin="2.5sp"
            android:textSize="30sp"
            android:text="/"/>
        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignEnd="@id/view1_child2"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_bs"
            android:background="#EBEDEF"
            android:layout_margin="2.5sp"
            android:textSize="30sp"
            android:text="9"/>
        <Button
            android:id="@+id/btn_multiple"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignStart="@id/view1_child2"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btn_dive"
            android:background="#CCD1D1"
            android:textAllCaps="false"
            android:layout_margin="2.5sp"
            android:textSize="30sp"
            android:text="x"/>
        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignEnd="@id/view1_child2"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_9"
            android:background="#EBEDEF"
            android:layout_margin="2.5sp"
            android:textSize="30sp"
            android:text="6"/>
        <Button
            android:id="@+id/btn_sub"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignStart="@id/view1_child2"
            android:background="#CCD1D1"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btn_multiple"
            android:layout_margin="2.5sp"
            android:textSize="30sp"
            android:text="-"/>
        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignEnd="@id/view1_child2"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_6"
            android:background="#EBEDEF"
            android:layout_margin="2.5sp"
            android:textSize="30sp"
            android:text="3"/>
        <Button
            android:id="@+id/btn_plus"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignStart="@id/view1_child2"
            android:background="#CCD1D1"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btn_sub"
            android:layout_margin="2.5sp"
            android:textSize="30sp"
            android:text="+"/>
        <Button
            android:id="@+id/btn_dot"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignEnd="@id/view1_child2"
            android:layout_alignParentStart="true"
            android:background="#CCD1D1"
            android:layout_below="@+id/btn_3"
            android:layout_margin="2.5sp"
            android:textSize="30sp"
            android:text="."/>
        <Button
            android:id="@+id/btn_equal"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_alignStart="@id/view1_child2"
            android:layout_alignParentEnd="true"
            android:background="#CCD1D1"
            android:layout_below="@+id/btn_plus"
            android:layout_margin="2.5sp"
            android:textSize="30sp"
            android:text="="/>

    </RelativeLayout>
</RelativeLayout>